$(
    $value = $data.Value
    $header = "<h$($data.Size) id='$($data.ID)' class='$($data.CssClasses)'>$($value)"

    if (![string]::IsNullOrWhiteSpace($data.Secondary)) {
        $sub = $data.Secondary
        $header += "<small class='text-muted'>$($sub)</small>"
    }

    $header += "</h$($data.Size)>"
    $header
)