<figure class="$($data.Alignment)">
    <blockquote class="blockquote $($data.CssClasses)" id="$($data.ID)">
        <p class="pode-text">$($data.Value)</p>
    </blockquote>
    $(if (![string]::IsNullOrWhiteSpace($data.Source)) {
        "<figcaption class='blockquote-footer'><cite>$($data.Source)</cite></figcaption>"
    })
</figure>